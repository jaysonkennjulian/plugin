{
    "name": "bizzle/plugin",
    "description": "This is an CLI Tool that generates Bizzle Plugin Template",
    "require": {
        "php": ">=5.6.4",
        "illuminate/console": "^5.4",
        "illuminate/support": "^5.4",
        "illuminate/filesystem": "^5.4",
        "guzzlehttp/guzzle": "^6.3"
    },
    "minimum-stability": "dev",
    "require-dev": {
        "phpunit/phpunit": "^6.2",
        "phpspec/phpspec": "^3.4"
    },
    "license": "MIT",
    "authors": [
        {
            "name": "Jayson Kenn Julian",
            "email": "jayson_julian@commude.ph"
        }
    ],
    "autoload": {
        "psr-4": {
            "Bizzle\\Plugin\\": "src" 
        }
    },
    "scripts": {
        "bizzle": [
            "cp transfer/app.php ../../../config/app.php",
            "cp transfer/composer.json ../../../composer.json"
        ]
    }
}
